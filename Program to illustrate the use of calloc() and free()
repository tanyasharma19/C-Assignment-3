#include <stdio.h>
#include <stdlib.h>

int main()
{
    int s, j, *ptr, sum = 0;
    printf("Enter number of elements: ");
    scanf("%d", &s);

    ptr = (int*) calloc(n, sizeof(int));
    if(ptr == NULL)
    {
        printf("Error! memory not allocated.");
        exit(0);
    }

    printf("Enter elements: ");
    for(j = 0; j < s; ++j)
    {
        scanf("%d", ptr + j);
        sum += *(ptr + j);
    }

    printf("Sum = %d", sum);
    free(ptr);
    return 0;
}
