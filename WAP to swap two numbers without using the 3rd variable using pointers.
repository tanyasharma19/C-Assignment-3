#include <stdio.h>
void swap(int *x,int *y)
{
    int u;
     u   = *x;
    *x   = *y;
    *y   =  u;
}

int main()
{
    int first, second;

    printf("Enter value of first number: ");
    scanf("%d",&first);
    printf("Enter value of second number: ");
    scanf("%d",&second);

   
    printf("Before Swapping: first number is: %d, second number is: %d\n",first,second);

   
    swap(&first,&second);

   
    printf("After  Swapping: first number is: %d, second number is: %d\n",first,second);

    return 0;
}
